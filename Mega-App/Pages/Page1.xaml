<Page x:Class="Mega_App.Pages.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="API Tester">

    <Grid Background="#f0f0f0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                <TextBlock Text="Entity Tests" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                <Button Content="Test Membership" Click="TestMembership_Click" Margin="0,5"/>
                <Button Content="Test Users" Click="TestUsers_Click" Margin="0,5"/>
                <Button Content="Test Categories" Click="TestCategories_Click" Margin="0,5"/>
                <Button Content="Test Products" Click="TestProducts_Click" Margin="0,5"/>
                <Button Content="Test Orders" Click="TestOrders_Click" Margin="0,5"/>
                <Button Content="Test Videos" Click="TestVideos_Click" Margin="0,5"/>

                <Separator Margin="0,15"/>
                <Button Content="Clear Log" Click="ClearLog_Click" Background="LightCoral" Margin="0,5"/>
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Column="1" Margin="10" Background="White" CornerRadius="5" BorderBrush="Gray" BorderThickness="1">
            <ScrollViewer x:Name="Scroller" VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="Output" Padding="10" FontFamily="Consolas" TextWrapping="Wrap"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>