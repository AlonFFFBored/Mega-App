<Page x:Class="Mega_App.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mega_App.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Title="HomePage">

    <Grid Background="#f0f0f0">
        <Grid.RowDefinitions>
            <RowDefinition Height="350"/> 
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="Black"> <ListBox x:Name="ImageSlider" 
                     ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                     ScrollViewer.VerticalScrollBarVisibility="Disabled"
                     ScrollViewer.CanContentScroll="False"
                     BorderThickness="0"
                     Padding="0"
                     Background="Transparent">

                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <Image Source="/images/dyson.jpg" 
                       Width="{Binding ElementName=ImageSlider, Path=ActualWidth}" 
                       Stretch="Uniform" 
                       VerticalAlignment="Center"/>
            
                <Image Source="/images/iphone.jpg" 
                       Width="{Binding ElementName=ImageSlider, Path=ActualWidth}" 
                       Stretch="Uniform" 
                       VerticalAlignment="Center"/>
            
                <Image Source="/images/insta camera.jpg" 
                       Width="{Binding ElementName=ImageSlider, Path=ActualWidth}" 
                       Stretch="Uniform" 
                       VerticalAlignment="Center"/>

            </ListBox>
        
            <Button Content="&lt;" HorizontalAlignment="Left" VerticalAlignment="Center" 
                    Click="Prev_Click" Width="40" Height="50" Opacity="0.5" Margin="5"/>

            <Button Content="&gt;" HorizontalAlignment="Right" VerticalAlignment="Center" 
                    Click="Next_Click" Width="40" Height="50" Opacity="0.5" Margin="5"/>
        </Grid>

        <TextBlock Grid.Row="1" Text="Welcome to the Store" HorizontalAlignment="Center" Margin="20" FontSize="20"/>

    </Grid>
    
</Page>