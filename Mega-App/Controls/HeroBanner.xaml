<UserControl x:Class="MegaApp.Controls.HeroBanner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Height="400" d:DesignWidth="800">

    <UserControl.Resources>
        <Storyboard x:Key="OnLoadedStoryboard">
            <DoubleAnimation Storyboard.TargetName="ContentStack"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.6"/>
            <DoubleAnimation Storyboard.TargetName="ContentTransform"
                             Storyboard.TargetProperty="Y"
                             From="20" To="0" Duration="0:0:0.6"/>
            <DoubleAnimation Storyboard.TargetName="BadgeScale"
                             Storyboard.TargetProperty="ScaleX"
                             From="0" To="1" BeginTime="0:0:0.5" Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <ElasticEase Oscillations="1" Springiness="3"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="BadgeScale"
                             Storyboard.TargetProperty="ScaleY"
                             From="0" To="1" BeginTime="0:0:0.5" Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <ElasticEase Oscillations="1" Springiness="3"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </UserControl.Resources>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource OnLoadedStoryboard}"/>
        </EventTrigger>
    </UserControl.Triggers>

    <Grid>
        <Border CornerRadius="16" ClipToBounds="True">
            <Grid>
                <Image Source="/Assets/banner_img.png" Stretch="UniformToFill">
                    <Image.RenderTransform>
                        <ScaleTransform x:Name="BgScale" CenterX="400" CenterY="200"/>
                    </Image.RenderTransform>
                </Image>

                <Rectangle>
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                            <GradientStop Color="#99000000" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="0.8"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <StackPanel x:Name="ContentStack" VerticalAlignment="Center" Margin="60,0" MaxWidth="500" HorizontalAlignment="Left">
                    <StackPanel.RenderTransform>
                        <TranslateTransform x:Name="ContentTransform" Y="20"/>
                    </StackPanel.RenderTransform>

                    <Border Background="{StaticResource BrushPrimary}" CornerRadius="12" 
                            HorizontalAlignment="Left" Padding="12,4" Margin="0,0,0,16">
                        <TextBlock Text="NEW ARRIVAL" FontSize="10" FontWeight="Bold" Foreground="White"/>
                    </Border>

                    <TextBlock Text="Next-Gen Tech is Here" FontSize="42" FontWeight="Bold" 
                               Foreground="White" TextWrapping="Wrap" Margin="0,0,0,16"/>

                    <TextBlock Text="Up to 30% off on premium audio and hair care technology. Explore the future of personal gadgets." 
                               FontSize="18" Foreground="#E0E0E0" TextWrapping="Wrap" Margin="0,0,0,32"/>

                    <StackPanel Orientation="Horizontal">
                        <Button Content="Shop Now" Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,16,0"/>
                        <Button Content="View Offers" Style="{StaticResource GhostButtonStyle}"/>
                    </StackPanel>
                </StackPanel>

                <Border Width="96" Height="96" Background="#D4183D" CornerRadius="48" 
                        VerticalAlignment="Top" HorizontalAlignment="Right" Margin="32"
                        RenderTransformOrigin="0.5,0.5" BorderBrush="#33FFFFFF" BorderThickness="4">
                    <Border.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform x:Name="BadgeScale" ScaleX="0" ScaleY="0"/>
                            <RotateTransform Angle="12"/>
                        </TransformGroup>
                    </Border.RenderTransform>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="SALE" FontSize="12" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock Text="-30%" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>